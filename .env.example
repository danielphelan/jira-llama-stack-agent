# Atlassian Configuration
# Get API token from: https://id.atlassian.com/manage-profile/security/api-tokens
ATLASSIAN_INSTANCE_URL=https://your-domain.atlassian.net
ATLASSIAN_EMAIL=your-email@example.com
ATLASSIAN_API_TOKEN=your-api-token-here
ATLASSIAN_CLOUD_ID=your-cloud-id  # Optional: will be auto-discovered

# Model Provider Configuration
# Choose one: ollama, llama_stack, openai
# Provider is configured in config/agent_config.yaml, but you can override with env vars

# Ollama Configuration (for local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.3:70b

# Llama Stack Configuration (Meta's framework)
LLAMA_STACK_BASE_URL=http://localhost:5000
LLAMA_STACK_API_KEY=  # Optional: if authentication is required
LLAMA_STACK_MODEL=meta-llama/Llama-3.3-70B-Instruct

# OpenAI Configuration (for GPT models)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4
# OPENAI_BASE_URL=  # Optional: for OpenAI-compatible APIs

# Embedding Model (for vector store)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Vector Store
CHROMA_PERSIST_DIR=./data/chroma
CHROMA_COLLECTION_NAME=project_knowledge

# Optional: Slack Notifications
SLACK_WEBHOOK_URL=

# Optional: Email Notifications
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/agent.log

# Feature Flags
ENABLE_AUTO_ANALYSIS=true
ENABLE_AUTO_GENERATION=true
ENABLE_TEST_GENERATION=true
ENABLE_TECHNICAL_SPECS=true
